{% set tinypilot_path = '/usr/lib/tinypilot' %}
{% set tinypilot_uri  = '/kvm' %}

location {{ tinypilot_uri }} {
    root {{ tinypilot_path }};

    index index.html;

    # Prevent NGINX from revealing its version number.
    server_tokens off;

    # Redirect with a 307 (Temporary Redirect) when a 497 (HTTP Request
    # Sent to HTTPS Port) error occurs in nginx.
    error_page 497 =307 https://$http_host$request_uri;

    ssl_certificate "/etc/ssl/certs/tinypilot-nginx.crt";
    ssl_certificate_key "/etc/ssl/private/tinypilot-nginx.key";
    ssl_protocols TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-SHA384:ECDHE-ECDSA-AES256-GCM-SHA384;
    ssl_ecdh_curve secp384r1;
    ssl_session_timeout  10m;
    ssl_session_cache shared:SSL:10m;
    ssl_session_tickets off;
    proxy_buffers 16 16k;
    proxy_buffer_size 16k;
    proxy_http_version 1.1;

    include /etc/nginx/snippets/request-headers.conf;
    include /etc/nginx/snippets/response-headers.conf;

    error_page 502 /502.html;

    location {{ tinypilot_uri }}/socket.io {
        proxy_set_header X-Forwarded-Prefix {{ tinypilot_uri }};
        proxy_pass http://tinypilot/socket.io;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";

        # Redefine request headers, as they've been overwritten in this block.
        # See https://nginx.org/en/docs/http/ngx_http_proxy_module.html#proxy_set_header
        include /etc/nginx/snippets/request-headers.conf;
    }
    location {{ tinypilot_uri }}/state {
        auth_request     {{ tinypilot_uri }}/auth;
        auth_request_set $auth_status $upstream_status;
        proxy_pass http://ustreamer/state;
    }
    location {{ tinypilot_uri }}/stream {
        auth_request     {{ tinypilot_uri }}/auth;
        auth_request_set $auth_status $upstream_status;
        postpone_output 0;
        proxy_buffering off;
        proxy_ignore_headers X-Accel-Buffering;
        proxy_pass http://ustreamer/stream;
    }
    location {{ tinypilot_uri }}/snapshot {
        auth_request     {{ tinypilot_uri }}/auth;
        auth_request_set $auth_status $upstream_status;
        proxy_pass http://ustreamer/snapshot;
    }
    location {{ tinypilot_uri }}/janus/ws {
        auth_request     {{ tinypilot_uri }}/auth;
        auth_request_set $auth_status $upstream_status;
        proxy_pass http://janus-ws;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";

        # Redefine request headers, as they've been overwritten in this block.
        # See https://nginx.org/en/docs/http/ngx_http_proxy_module.html#proxy_set_header
        include /etc/nginx/snippets/request-headers.conf;
    }
    location {{ tinypilot_uri }}/ca.crt {
        alias "/etc/ssl/certs/tinypilot-ca.crt";
    }
    location {{ tinypilot_uri }} {
        proxy_set_header X-Forwarded-Prefix {{ tinypilot_uri }};
        proxy_pass http://tinypilot/;
    }
    location ~* ^{{ tinypilot_uri }}/.+\.(html|js|js.map|css|woff|woff2)$ {
        rewrite ^{{ tinypilot_uri }}(/.*)$ $1 break;
        root "{{ tinypilot_path }}/app/static";

        # We cache assets to prevent the browser from making redundant
        # requests to the same files while loading the page. (Observed on
        # Chrome 91.) We don’t want caching otherwise, though, in order to
        # avoid stale files after users update their device. Note, that in
        # addition to `max-age`, the browser’s caching behaviour is relative
        # to the `Last-Modified` header, so we make that seem recent.
        add_header Last-Modified $date_gmt;
        add_header Cache-Control 'public, max-age=10s';

        # Redefine response headers, as they've been overwritten in this block.
        # See https://nginx.org/en/docs/http/ngx_http_headers_module.html#add_header
        include /etc/nginx/snippets/response-headers.conf;
    }
    location ~* ^{{ tinypilot_uri }}/.+\.(jpg|jpeg|png|ico)$ {
        rewrite ^{{ tinypilot_uri }}(/.*)$ $1 break;
        root "{{ tinypilot_path }}/app/static";
    }
    # Authenticate any protected routes that are outside of the core
    # TinyPilot web app.
    location = {{ tinypilot_uri }}/auth {
        internal;
        proxy_pass              http://tinypilot/api/auth;
        proxy_pass_request_body off;
        proxy_set_header        Content-Length "";
        proxy_set_header        X-Original-URI $request_uri;

        # Redefine request headers, as they've been overwritten in this block.
        # See https://nginx.org/en/docs/http/ngx_http_proxy_module.html#proxy_set_header
        include /etc/nginx/snippets/request-headers.conf;
    }
}
